{
  "name": "strava-route-optimizer",
  "version": "1.0.0",
  "description": "A web application that optimizes routes using Strava data and CPP algorithm",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "node server/index.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "axios": "^1.6.0",
    "node-fetch": "^3.3.2",
    "gpx-builder": "^1.0.0",
    "@turf/turf": "^6.5.0",
    "geojson": "^0.5.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "strava",
    "route-optimization",
    "cpp",
    "openstreetmap",
    "gpx"
  ],
  "author": "Your Name",
  "license": "MIT"
} 